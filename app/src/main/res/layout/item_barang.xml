<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="barang"
            type="com.binartest.praktek.data.repositories.DataItem" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_namanarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{barang.namabarang}"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="Nama Barang" />

        <TextView
            android:id="@+id/text_jumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{barang.jumlah}"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="45" />

        <TextView
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:id="@+id/text_pemasok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{barang.pemasok}"
            tools:text="Pemasok" />

        <TextView
            android:textSize="20sp"
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{barang.tanggal}"
            android:textColor="@android:color/black"
            tools:text="Tanggal" />


    </LinearLayout>
</layout>
